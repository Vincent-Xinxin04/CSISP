{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "koa", "koa-bodyparser"],
    "baseUrl": "./",
    "paths": {
      "@router": ["src/router"],
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@clients/*": ["src/clients/*"],
      "@schemas/*": ["src/schemas/*"],
      "@validation": ["src/validation"],
      "@validation/*": ["src/validation/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["app.ts", "src"]
}
