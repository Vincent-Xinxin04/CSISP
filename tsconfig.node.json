{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "CSISP Node.js TypeScript 配置",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["node"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  },
  "include": ["**/*.ts", "**/*.js", "docs/.vitepress/**/*.ts"],
  "exclude": ["node_modules", "dist", "build", ".dist", ".output", "coverage"]
}
